<form class="{{cssClass}} {{actor.type}}" autocomplete="off">

  <div class="middle flexrow">
    <div style="flex:4">
      <div class="info">
        <label for="name" class="resource-label">Name</label>
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
      </div>
      <hr>
      <div class="profile">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
      </div>
      <hr>
      <div class="info">
        <label for="system.relationship" class="resource-label">Relationship</label>
        <input name="system.relationship" type="text" value="{{actor.system.relationship}}" placeholder="Single" />
      </div>
      <hr>
      {{#if actor.system.hasProfession}}
      <div class="info">
        <label for="system.profession" class="resource-label">Profession</label>
        <input name="system.profession" type="text" value="{{actor.system.profession}}" placeholder="" />
      </div>
      {{else}}
      <div class="info">
        <label for="system.title" class="resource-label">Title</label>
        <input name="system.title" type="text" value="{{actor.system.title}}" placeholder="" />
      </div>
      <hr>
      <div class="info">
        <label for="system.estate" class="resource-label">Estate</label>
        <input name="system.estate" type="text" value="{{actor.system.estate}}" placeholder="" />
      </div>
      {{/if}}
      <hr>
      <div class="info last-line">
        <div class="age">
          <label for="system.age" class="resource-label">Age</label>
          <input name="system.age" type="text" value="{{actor.system.age}}" placeholder="20" />
        </div>
        <hr class="vertical">
        <div class="flaw">
          <label for="system.flaw" class="resource-label">Flaw</label>
          <input name="system.flaw" type="text" value="{{actor.system.flaw}}" placeholder="Flaw" />
        </div>
      </div>
    </div>
    <div style="flex:6">
      <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="traitsTab">Traits</a>
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="sceneCues">Scene Cues</a>
      </nav>

      <section class="sheet-body">

        <div class="tab traitsTab" data-group="primary" data-tab="traitsTab">
          {{> "systems/flabbergasted/templates/actor/parts/actor-traits.hbs"}}

        </div>

        {{!-- Biography Tab --}}
        <div class="tab biography" data-group="primary" data-tab="description">
          {{> "systems/flabbergasted/templates/actor/parts/actor-description.hbs"}}
        </div>

        {{!-- Owned Scene Cues Tab --}}
        <div class="tab sceneCues" data-group="primary" data-tab="sceneCues">
          {{> "systems/flabbergasted/templates/actor/parts/actor-sceneCues.hbs"}}
        </div>
      </section>
    </div>
  </div>

  <div class="socialStanding">
    <p data-roll-type="dignity" class="rollable">Dignity</p>
    <hr class="vertical">
    {{#each socialStandingValues as |value index|}}
    <p>{{value}}</p>
    <hr class="vertical {{ifThen (eq index 20) "" " single"}}">
    {{/each}}
    <p data-roll-type="scandal" class="rollable">Scandal</p>
  </div>
</form>